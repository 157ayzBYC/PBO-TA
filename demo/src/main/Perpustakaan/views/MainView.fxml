<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="src.main.Perpustakaan.controllers.MainController" spacing="20"
      alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    <Text text="Sistem Manajemen Perpustakaan" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Button fx:id="btnBuku" text="Manajemen Buku" onAction="#handleBuku"
            style="-fx-font-size: 16; -fx-min-width: 200; -fx-min-height: 50;"/>

    <Button fx:id="btnAnggota" text="Manajemen Anggota" onAction="#handleAnggota"
            style="-fx-font-size: 16; -fx-min-width: 200; -fx-min-height: 50;"/>

    <Button fx:id="btnPeminjaman" text="Manajemen Peminjaman" onAction="#handlePeminjaman"
            style="-fx-font-size: 16; -fx-min-width: 200; -fx-min-height: 50;"/>
</VBox>